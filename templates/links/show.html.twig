{% extends 'main.html.twig' %}

{% block title %}Links{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Links</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th>Href</th>
                <td>{{ link.href }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ link.alt }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ link.name }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ link.icon }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ link.enable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('links_index') }}">back to list</a>

    <a href="{{ path('links_edit', {'id': link.id}) }}">edit</a>

    {{ include('links/_delete_form.html.twig') }}
    </div>
{% endblock %}
